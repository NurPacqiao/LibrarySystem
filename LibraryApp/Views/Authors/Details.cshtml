@model LibraryApp.Models.Author

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>
    </dl>
</div>

<div class="mt-4 d-flex gap-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning rounded-pill px-4 text-white">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>