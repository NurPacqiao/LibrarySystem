@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="text-center mb-5">
                <h1 class="fw-bold display-5">Join LibraryApp</h1>
                <p class="text-muted">Start your reading journey today</p>
            </div>

            <div class="row g-0 shadow rounded-4 overflow-hidden">
                <div class="col-md-6 bg-white p-5">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="d-flex align-items-center mb-4">
                            <i class="bi bi-person-plus-fill fs-3 text-success me-2"></i>
                            <h3 class="mb-0 fw-bold">Create Account</h3>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username"
                                aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted">Email address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="new-password"
                                aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="text-muted">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control rounded-3"
                                autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword" class="text-muted">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="registerSubmit" type="submit"
                                class="btn btn-success btn-lg rounded-pill fw-bold">Sign Up</button>
                        </div>

                        <div class="mt-4 text-center small">
                            <p class="text-muted">Already have an account? <a asp-page="./Login"
                                    class="text-decoration-none fw-bold text-success">Log in here</a></p>
                        </div>
                    </form>
                </div>

                <div class="col-md-6 bg-light p-5 border-start d-flex flex-column justify-content-center">
                    <div class="text-center mb-4">
                        <h4 class="fw-bold text-secondary">Quick Sign Up</h4>
                        <p class="text-muted small">Register using external services</p>
                    </div>

                    <div class="d-grid gap-3 px-lg-4">
                        <button type="button"
                            class="btn btn-outline-danger btn-lg rounded-pill text-start position-relative py-2">
                            <i class="bi bi-google position-absolute top-50 start-0 translate-middle-y ms-3 fs-5"></i>
                            <span class="w-100 text-center d-inline-block">Sign up with Google</span>
                        </button>

                        <button type="button"
                            class="btn btn-outline-primary btn-lg rounded-pill text-start position-relative py-2">
                            <i class="bi bi-facebook position-absolute top-50 start-0 translate-middle-y ms-3 fs-5"></i>
                            <span class="w-100 text-center d-inline-block">Sign up with Facebook</span>
                        </button>
                    </div>

                    <div class="mt-4 alert alert-light border text-center small text-muted">
                        <i class="bi bi-info-circle me-1"></i> No credit card required.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}